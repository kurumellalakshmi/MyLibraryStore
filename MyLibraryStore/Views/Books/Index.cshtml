@model IEnumerable<MyLibraryStore.Models.Book>

@{ ViewBag.Title = "Books"; }
<h1>List Of Books</h1>
<div class="col-md-5">

    <a asp-controller="Books" asp-action="Create" class="btn btn-outline-secondary">Add New</a>

</div>

@if (Model.Count() == 0)
{
<h3>No Books Available</h3> }
else
{
<ul class="list-group">
    @foreach (var book in Model)
    {
<li class="list-group-item">
    <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">@book.BookName</a>
</li>}
</ul>}



